{
    "version":"2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command":"cd build && cmake .. && make",
            "problemMatcher": ["$tsc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "debug_build",
            "type": "shell",
            "command":"cd build && cmake -DCMAKE_BUILD_TYPE=Debug .. && make",
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "build_and_run",
            "type": "shell",
            "command":"cd build && cmake .. && make && ./main"
        }
    ]
}